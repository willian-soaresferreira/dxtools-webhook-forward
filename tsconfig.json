{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./bin",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
  },
  "include": ["src"]
}
